<!-- Header -->
<%- include('../../templates/header.ejs') %>
<!-- End of Header -->

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../templates/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Navbar -->
      <%- include('../../templates/navbar.ejs') %>
      <!-- End of Navbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Menu Admin - Item</h1>
        <!-- End Heading -->

        <!-- Alert -->
        <%- include('../../templates/message.ejs') %>
        <!-- End Alert -->

        <% if (action == 'view') { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="show-tab"
              data-toggle="tab"
              href="#show-item"
              role="tab"
              aria-controls="show"
              aria-selected="true"
              >Show Item</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="add-tab"
              data-toggle="tab"
              href="#add-item"
              role="tab"
              aria-controls="add"
              aria-selected="false"
              >Add Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- DataTales Example -->
          <%- include('show-table.ejs') %>
          <!-- End DataTales Example -->

          <!-- Add Item -->
          <%- include('add-item.ejs') %>
          <!-- End Add Item -->
        </div>
        <% } else if (action == 'show image') { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="show-tab"
              data-toggle="tab"
              href="#show-image"
              role="tab"
              aria-controls="show"
              aria-selected="true"
              >Show Image</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- Show Image Item -->
          <%- include('show-image.ejs') %>
          <!-- End Show Image Item -->
        </div>
        <% } else if (action == 'edit') { %>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="edit-tab"
              data-toggle="tab"
              href="#edit-item"
              role="tab"
              aria-controls="show"
              aria-selected="true"
              >Edit Item</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <!-- Edit Item -->
          <%- include('edit-item.ejs') %>
          <!-- End Edit Item -->
        </div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../templates/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Modal-->
<!-- End Modal -->

<!-- Script -->
<%- include('../../templates/script.ejs') %>
<script>
  CKEDITOR.replace("description");
</script>
<!-- End of Script -->
